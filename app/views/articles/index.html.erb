<h1> Showing The List of Articles </h1>
<table border=1>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |a| %>
            <tr>
                <td>
                    <%= a.title %>
                </td>
                <td>
                    <%= a.description %>
                </td>
                <td>
                    <%= link_to 'Show',article_path(a) %>
                    <%= link_to 'Edit', edit_article_path(a) %>
                    <%= link_to "Delete", article_path(a.id), data: { turbo_method: :delete } %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table><br/>
<%= link_to "Create New Articles",new_article_path,class: "btn btn-primary" %>
<p><%= link_to 'Home',root_path %></p>