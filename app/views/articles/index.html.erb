<h1> Showing The List of Articles </h1>
<%= @articles.each do |a| %>
    <div class="card text-center">
    <div class="card-header">
        By Inish Raj
    </div>
    <div class="card-body">
        <h5 class="card-title"><%= a.title %></h5>
        <p class="card-text"><%= a.description %></p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
        <%= link_to 'Show',article_path(a),class:"btn btn-primary" %>
        <%= link_to 'Edit', edit_article_path(a),class:"btn btn-primary" %>
        <%= link_to "Delete", article_path(a.id), data: { turbo_method: :delete } ,class:"btn btn-primary"%>
    </div>
    <div class="card-footer text-body-secondary">
        Created At : <%= a.created_at %>    </div>
    </div>
<% end %>   