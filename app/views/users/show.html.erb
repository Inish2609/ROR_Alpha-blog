<h1><%= @user.username %>'s Profile</h1>
<%= image_tag @user.avatar, style: "min-width: 500px; max-height: 500px; align-item:center;justify-content:center;" if @user.avatar.attached? %>
<div>
    <%= link_to 'Edit Profile',edit_user_path(@user),class:"btn btn-primary" %>
</div>
<% @user.articles.each do |a| %>
    <div>
        <h2><%= a.title %></h2>
        <p><%= a.description %></p>
        <%= link_to 'Show',article_path(a),class:"btn btn-primary" %>
        <%= link_to 'Edit', edit_article_path(a),class:"btn btn-primary" %>
        <%= link_to "Delete", article_path(a.id), data: { turbo_method: :delete } ,class:"btn btn-primary"%>
    </div>
<% end %>
